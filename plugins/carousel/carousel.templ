package carousel

import (
	"explorer/app/types"
	"strconv"
)

templ CarouselConfigModal(images []types.CarouselImage) {
	<!-- Modal Header -->
	<div class="flex justify-between items-center mb-4">
		<h2 class="text-xl font-bold text-green-900">🖼️ Configure Carousel Images</h2>
	</div>
	<!-- Existing Images List -->
	<ul class="space-y-2 mb-6">
		for _, img := range images {
			<li class="border p-3 rounded text-sm text-gray-800 flex justify-between items-center">
				<p>
					{ img.URL }
				</p>
				<form
					hx-delete={ "/admin/carousel/" + strconv.Itoa(int(img.ID)) + "/delete" }
					hx-target="#modal-content"
					hx-swap="innerHTML"
					onsubmit="return confirm('Are you sure you want to delete this image?')"
				>
					<button
						type="submit"
						class="text-red-600 hover:text-red-800 text-lg"
						title="Delete image"
					>🗑️</button>
				</form>
			</li>
		}
	</ul>
	<!-- Add Image Form -->
	<form
		hx-post="/admin/carousel/create"
		hx-target="#modal-content"
		hx-swap="innerHTML"
		class="space-y-3"
	>
		<input
			type="text"
			name="url"
			required
			placeholder="Image URL"
			class="w-full border rounded p-2 text-sm"
		/>
		<button type="submit" class="bg-green-800 text-white px-4 py-2 rounded hover:bg-green-700">
			➕ Add Image
		</button>
	</form>
	<!-- Close Modal -->
	<button
		type="button"
		@click="$dispatch('close-modal')"
		class="absolute top-2 right-2 text-gray-500 hover:text-red-500 text-lg font-bold p-1 min-w-[24px] min-h-[24px] flex items-center justify-center"
	>
		✖
	</button>
}
