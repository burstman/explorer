package buses

import "explorer/app/types"
import "strconv"

templ BusConfigModal(buses []types.BuseType, successFlashes, failFlashes []string) {
	if len(successFlashes) > 0 {
		<div
			x-data="{ show: true }"
			x-show="show"
			x-init="setTimeout(() => show = false, 4000)"
			class="bg-green-100 text-green-800 border border-green-400 px-4 py-2 rounded mb-4 transition-all duration-500"
		>
			for _, msg := range successFlashes {
				<p>{ msg }</p>
			}
		</div>
	}
	if len(failFlashes) > 0 {
		<div
			x-data="{ show: true }"
			x-show="show"
			x-init="setTimeout(() => show = false, 4000)"
			class="bg-red-100 text-red-800 border border-red-400 px-4 py-2 rounded mb-4 transition-all duration-500"
		>
			for _, msg := range failFlashes {
				<p>{ msg }</p>
			}
		</div>
	}
	<!-- Modal Header -->
	<div class="flex justify-between items-center mb-4">
		<h2 class="text-xl font-bold text-green-900">ğŸšŒ Configure Buses</h2>
		<!-- Close Button -->
	</div>
	<!-- Existing Buses List -->
	<ul class="space-y-2 mb-6">
		for _, bus := range buses {
			<li class="border p-3 rounded text-sm text-gray-800 flex justify-between items-center">
				<span class="flex-1"><strong>{ bus.Name }</strong> - { bus.Capacity } seats</span>
				<form
					method="POST"
					action={ "/admin/buses/" + strconv.Itoa(bus.ID) + "/delete" }
					hx-post={ "/admin/buses/" + strconv.Itoa(bus.ID) + "/delete" }
					hx-target="#bus-modal-content"
					hx-swap="innerHTML"
					onsubmit="return confirm('Are you sure you want to delete this bus?')"
				>
					<button type="submit" class="text-red-600 hover:text-red-800 text-lg" title="Delete bus">ğŸ—‘ï¸</button>
				</form>
			</li>
		}
	</ul> <!-- Add Bus Type Form -->
	<form
		hx-post="/admin/buses/create"
		hx-target="#bus-modal-content"
		hx-swap="innerHTML"
		class="space-y-3"
	>
		<input type="text" name="name" placeholder="Bus Name" class="w-full border rounded p-2 text-sm"/>
		<input type="number" name="capacity" placeholder="Capacity" class="w-full border rounded p-2 text-sm"/>
		<button type="submit" class="bg-green-800 text-white px-4 py-2 rounded hover:bg-green-700">
			â• Add Bus
		</button>
	</form>
	<button
		type="button"
		@click="$dispatch('close-modal')"
		class="absolute top-2 right-2 text-gray-500 hover:text-red-500 text-lg font-bold p-1 min-w-[24px] min-h-[24px] flex items-center justify-center"
	>
		âœ–
	</button>
}
